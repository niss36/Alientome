<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<menus>
    <menu id="main">
        <button action="showMenu" data="saves"/>
        <button action="showMenu" data="options"/>
        <button action="showMenu" data="controls"/>
        <button action="quit"/>
    </menu>
    <menu id="saves">
        <panel type="saves"/>
        <button action="back"/>
    </menu>
    <menu id="options">
        <panel type="options"/>
        <button action="done"/>
    </menu>
    <menu id="controls">
        <panel type="keybindings"/>
        <button action="done"/>
    </menu>
    <menu id="pause">
        <button action="showMenu" data="options"/>
        <button action="showMenu" data="controls"/>
        <button action="game" data="resume"/>
        <button action="game" data="reset"/>
        <button action="game" data="exit"/>
    </menu>
    <menu id="death">
        <button action="game" data="reset"/>
        <button action="game" data="exit"/>
    </menu>
</menus>